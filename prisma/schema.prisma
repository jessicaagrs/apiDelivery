generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customers {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  status    Boolean
  createdAt DateTime? @default(now())
  updateAt  DateTime? @default(now())
}

model PaymentsMethods {
  id          String @id @default(cuid())
  description String
}

model Shopmans {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  role      String
  status    Boolean
  createdAt DateTime? @default(now())
  updateAt  DateTime? @default(now())
}

model Products {
  id          String  @id @default(cuid())
  description String
  price       Decimal @db.Decimal(10, 2)
  urlImage    String
  type        String
}

model Orders {
  id              String    @id @default(cuid())
  customerId      String
  shopmanId       String
  paymentMethodId String
  value           Decimal   @db.Decimal(10, 2)
  status          String
  createdAt       DateTime? @default(now())
  updateAt        DateTime? @default(now())
}

model ProductsOrder {
  id        String @id @default(cuid())
  productId String
  orderId   String
  quantity  Int
}
